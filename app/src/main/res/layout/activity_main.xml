<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04D4F0"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/circle_pick_1"
            android:layout_width="460sp"
            android:layout_height="460sp"
            android:translationY="-240sp"
            android:background="@drawable/cyan_full_rounded"
            tools:layout_gravity="center_horizontal" />

        <View
            android:id="@+id/circle_pick_2"
            android:layout_width="640sp"
            android:layout_height="640sp"
            android:layout_gravity="bottom"
            android:translationY="400sp"
            android:translationX="-160sp"
            android:background="@drawable/light_grey_full_rounded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tvPick1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kavoon"
                android:gravity="center_horizontal"
                android:text="@string/titile_main_1"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32sp"
                android:background="@drawable/blue_12_rounded"
                android:fontFamily="@font/nerko_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="48sp"
                android:text="@string/start"
                android:textFontWeight="400"
                android:textSize="40sp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>